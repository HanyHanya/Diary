<UserControl x:Class="Diary.MVVM.View.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diary.MVVM.View"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             Foreground="#FFE91E6F" Background="White"
             d:DesignHeight="550" d:DesignWidth="688">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Text="{DynamicResource Language}"/>
        <Button Content="{DynamicResource ENG}" Command="{Binding EngLangCommand}" Margin="145,78,0,74"/>
        <Button Content="{DynamicResource Blue}" Command="{Binding BlueColorCommand}" Margin="0,115,0,37"/>
    
    </Grid>
</UserControl>
